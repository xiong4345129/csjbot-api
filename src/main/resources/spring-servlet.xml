<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc.xsd
">
    <!--=========================================-->
    <!--通用Spring mvc配置-->
    <!-- 注解驱动 -->
    <mvc:annotation-driven/>

    <context:component-scan base-package="com.csjbot.api">
        <context:include-filter type="regex" expression=".*\.(controller|service)\..*"/>
        <!--<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Repository"/>-->
    </context:component-scan>

    <!--=========================================-->
    <!-- 引入相关xml -->
    <!--通用-->
    <import resource="spring-common.xml"/>
    <!--人脸识别-->
    <import resource="spring-face.xml"/>
    <!--机器人管理-->
    <import resource="spring-robot.xml"/>
    <!--产品管理-->
    <import resource="spring-product.xml"/>
    <!--支付-->
    <import resource="spring-pay.xml"/>

</beans>